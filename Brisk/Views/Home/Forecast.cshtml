@model Brisk.Models.ViewModels.ForecastViewModel
@{
    ViewData["Title"] = "Forecast";
}

<strong>@Model.FiveDay.City</strong>
<br /><br />

@for (int i = 0; i < Model.FiveDay.Reports.Count; i++)
{
    <img src="@Model.FiveDay.Reports[i].Icon" />

    <ul>
        <li>@Model.FiveDay.Reports[i].Time</li>
        <li>Temp: @Model.FiveDay.Reports[i].CurrentTemp</li>
        <li>Humidity: @Model.FiveDay.Reports[i].Humidity</li>
        <li>@Model.FiveDay.Reports[i].Description</li>
        <li>@Model.FiveDay.Reports[i].WeatherCode</li>
    </ul>
    <br />
}
